@page
@model WebShop.Pages.OrderConfirmationModel
@using WebShopProject.Models

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Order Confirmation</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<h1>Orderbekräftelse</h1>
	<p>Tack för din beställning!</p>
	<p>Totalsumma för beställningen: @Model.TotalPrice</p>


	<h2>Beställda produkter:</h2>
	<ul>
		@foreach (var cartItem in Model.Cart.CartItems)
		{
			<li>@cartItem.Product.Name - @cartItem.Product.Price.ToString("C0")</li>
		}
	</ul>

	<a href="/Products" class="btn btn-primary">Tillbaka till söksidan</a>
</body>
</html>