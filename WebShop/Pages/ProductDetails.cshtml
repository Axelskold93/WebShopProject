@page
@model WebShopProject.Pages.ProductDetailsModel
@using WebShopProject.Models
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="~/css/details.css" />
</head>
<body>
    <h1>Product Details</h1>
    <a asp-page="./Products">Tillbaka till produktsidan</a>
    <div class="product-details">
    <img src="~/images/@Model.Product.ImagePath" alt="@Model.Product.Name"/>
    <ul>
    <h2>@Model.Product.Name</h2>
    <li>Beskrivning: @Model.Product.Description</li>
    <li>Pris: @Model.Product.Price.ToString("C0")</li>
       <li><form method="post" asp-page-handler="AddToCart">
            <input type="hidden" name="productId" value="@Model.Product.ProductId">
            <button type="submit">Lägg till i varukorg</button>
        </form>
            </li>
        </ul>

    </div>

</body>
</html>