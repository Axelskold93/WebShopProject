@page
@model WebShopProject.Pages.ProductsModel
@{
    <!DOCTYPE html>
    <html>
    <head>
        <title>Products</title>
    </head>
    <body>
        <h1>Products</h1>
        <table>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td><img src="~/images/@product.ImagePath" alt="@product.Name" style="max-width: 100px; max-height: 100px;" /></td>
                </tr>
            }
        </table>
    </body>
    </html>
}
